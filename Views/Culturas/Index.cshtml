@model IEnumerable<Serrana.Models.Cultura>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mes_Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mes_Fim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoMaximo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes_Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes_Fim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoMaximo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cultura_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cultura_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cultura_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
