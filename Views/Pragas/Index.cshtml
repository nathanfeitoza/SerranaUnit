@model IEnumerable<Serrana.Models.Praga>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Popular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Cientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Popular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Cientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Praga_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Praga_Id">Details</a> |
